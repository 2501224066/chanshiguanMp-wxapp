.release-adopt {
  padding-bottom: 10vh;
}

.image {
  padding: 50rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.image>.img {
  width: 200rpx;
  height: 200rpx;
  margin: 0 20rpx 20rpx 20rpx;
  position: relative;
}

.image>.img>.cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 43rpx;
  text-align: center;
  line-height: 43rpx;
  color: #fff;
  background: #9139ff;
  font-size: 24rpx;
}

.box {
  padding: 0 40rpx;
}

.box>.title {
  width: 100%;
  height: 40rpx;
  border-bottom: 1rpx solid #ececec;
  font-size: 32rpx;
  padding-bottom: 20rpx;
}

.box>.title>.input {
  width: 100%;
  height: 100%;
}

.box .placeholder {
  color: #B8B8B8;
}

.box>.cause {
  width: 100%;
  height: 150rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.box>.cause>textarea {
  width: 100%;
  height: 100%;
}

.box>.address {
  height: 53rpx;
  display: flex;
  font-size: 27rpx;
  line-height: 53rpx;
  display: flex;
}

.box>.address>.where {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f7f7f7;
  border-radius: 27rpx;
  padding: 0 20rpx;
  color: #8C8C8C;
}

.box>.address>.where>.img {
  width: 27rpx;
  height: 29rpx;
  margin-right: 10rpx;
  line-height: 0;
}

.box>.set {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 50rpx 0 20rpx 0;
}

.box>.set>.l {
  display: flex;
  align-items: center;
  flex: 1;
  font-size: 33rpx;
}

.box>.set>.l>.img {
  width: 33rpx;
  height: 33rpx;
  line-height: 0;
  margin-right: 23rpx;
}

.box>.set>.r {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 27rpx;
}


.box>.set>.r>.img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 17rpx;
  overflow: hidden;
}


.box>.set>.r>.img2 {
  width: 12rpx;
  height: 21rpx;
  line-height: 0;
  margin-left: 22rpx;
}

.box>.status {
  padding: 25rpx 0;
}

.box>.status>.item {
  padding: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.box>.status>.item>.l {
  font-size: 28rpx;
  min-width: 120rpx;
  display: flex;
  align-items: center;
}

.box>.status>.item>.l>.img {
  width: 33rpx;
  height: 33rpx;
  margin-right: 20rpx;
}

.box>.status>.item>.r {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}

.box>.status>.item>.r>.tag {
  margin-left: 37rpx;
  height: 63rpx;
  line-height: 63rpx;
  border-radius: 32rpx;
  background: #f6f6f6;
  font-size: 28rpx;
  padding: 0 20rpx;
  color: #5A5A5A;
}

.box>.status>.item>.r>.sel {
  color: #9147FF;
  background: #eee4fb;
}

.declare {
  padding: 40rpx;
  background: #fdf7e8;
  color: #D8B24B;
  font-size: 25rpx;
}

.box>.type>.item {
  margin: 28rpx 0;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #828088;
}

.box>.type>.item>.title {
  flex: 1;
}

.box>.type>.checkout {
  color: #2d2d2d;
}

.box>.type>.item>radio {
  transform: scale(0.7);
}


.box>.type>.item>.agreement {
  color: #D8B24B;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 99999;
  padding: 20rpx;
  box-sizing: border-box;
}

.footer>.content {
  width: 633rpx;
  margin: auto;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background: #8434e9;
  color: #fff;
  border-radius: 40rpx;
}

.box>.status>.price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f6f6f6;
  padding: 20rpx;
}

.box>.status>.price .placeholder{
  color: #828088;
  font-size: 28rpx;
}

.box>.status>.price>input{
  text-align: right;
}

