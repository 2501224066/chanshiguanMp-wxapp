.container {
  background: #fff;
}

.top {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 3%;
  box-sizing: border-box;
}

.header {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.name {
  flex: 1;
  font-weight: bold;
  margin-left: 10rpx;
}

.follow {
  width: 90rpx;
  height: 60.6rpx;
}

.img-box {
  position: relative;
}

.img-num {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background: rgba(0, 0, 0, .7);
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  padding: 0 15rpx;
  font-size: 20rpx;
  z-index: 1;
}

swiper image {
  width: 100%;
  height: 100%;
}

.img-box-2 {
  height: 116rpx;
  display: flex;
  padding: 8rpx 0;
}

.img-box-2>image {
  justify-content: left;
  width: 116rpx;
  height: 116rpx;
  margin: 0 4rpx;
  box-sizing: border-box;
}

.img-box-2>image:first-child {
  margin-left: 8rpx;
}

.img-box-2>image:last-child {
  margin-right: 8rpx;
}

.avtive {
  border: 4rpx solid #f66e6e;
}

.body {
  padding: 0 4% 20rpx 4%;
}

.num {
  margin: 20rpx 0;
  color: #999;
  font-size: 26rpx;
}

.title {
  font-weight: bold;
  margin-bottom: 20rpx;
}

.content {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.comment {
  margin-top: 4rpx;
  padding: 30rpx 4%;
  background: #fff;
}

.comment-num {
  font-size: 28rpx;
  font-weight: bold;
}

.comment-header {
  padding-top: 30rpx;
  margin-right: 3%;
}

.comment-header>image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.comment-body {
  display: flex;
}

.comment-c {
  flex: 1;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.comment-c>view {
  margin-bottom: 6rpx;
}

.comment-c>view:nth-child(1) {
  color: #999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment-c>view:nth-child(1) image {
  width: 30rpx;
  height: 30rpx;
}

.comment-c>view:nth-child(3) {
  color: #999;
  font-size: 22rpx;
}

.comment-c .comment-c {
  margin-top: 10rpx;
}

.comment-header2 {
  padding-top: 10rpx;
  margin-right: 3%;
}

.comment-header2>image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.openup{
  width: 100%;
  height: 130rpx;
}


.share {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding-bottom: 20rpx;
}

.share>view {
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}

.add-comm {
  margin: 20rpx 4%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-comm>image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 25rpx;
}

.add-comm>view {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 27rpx;
  font-size: 24rpx;
  color: #999;
  border-radius: 27rpx;
  flex: 1;
  background: #f5f5f5;
}

.cominput {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .7);
  z-index: 2;
}

.cominput-bg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
  z-index: 3;
}


.combox {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 130rpx;
  padding-bottom: 20rpx;
  background: #fff;
  z-index: 4;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.combox>.input {
  width: 74%;
  height: 70rpx;
  background: #f3f3f3;
  padding: 0 10rpx;
  border-radius: 10rpx;
  margin: 0 5%;
}

.input>input {
  width: 100%;
  height: 74rpx;
  font-size: 26rpx;
  caret-color: #9147ff;
}

.input-pl {
  color: #c1c1c1;
}

.comsub{
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background:#9147ff;
  margin-right: 2%;
  border-radius: 10rpx;
}