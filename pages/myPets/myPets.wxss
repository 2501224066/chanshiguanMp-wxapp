page {
  background: #f8f8f8;
}

.my-pets{
  padding-bottom: 10vh;
}

.list {
  padding: 0 17rpx;
}

.list>.item {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 25rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list>.item>.img {
  width: 147rpx;
  height: 147rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 23rpx;
}


.list>.item>.content {
  flex: 1;
  height: 147rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list>.item>.content>.name {
  font-size: 32rpx;
  font-weight: bold;
}

.list>.item>.content>.info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 43rpx;
}

.list>.item>.content>.info>view {
  margin-right: 10rpx;
}

.list>.item>.content>.info>.sex {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #f1eff7;
  width: 43rpx;
  height: 43rpx;
}

.list>.item>.content>.info>.sex>.img {
  margin: auto;
  width: 13rpx;
  height: 21rpx;
  line-height: 0;
}

.list>.item>.content>.info>.breed {
  color: #43CF7C;
  background: #f4fdf8;
  padding: 0 10rpx;
}

.list>.item>.content>.info>.age {
  background: #fef9f3;
  color: #FF8D1A;
  padding: 0 10rpx;
}

.list>.item>.content>.memo {
  font-size: 28rpx;
  color: #939393;
}

.list>.item>.r {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}
