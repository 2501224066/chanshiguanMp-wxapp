page{
  background: #000;
}

swiper{
  height: 100vh;
}


.stop{
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  left: 50%;
  top: 46vh;
  margin-left: -80rpx;
  margin-top: -80rpx;
  z-index: 1;
}

.video {
  width: 100%;
  height: 90vh;
  background: #000;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.video2{
  width: 100%;
  height: 111vh;
}

video{
  width: 100%;
  height: 100%;
}

.about {
  position: fixed;
  bottom: 10vh;
  left: 0;
  width: 80%;
  color: #fff;
  padding-left: 3%;
}

.name {
  font-weight: bold;
}

.name>span {
  font-size: 24rpx;
  margin-left: 10rpx;
}

.title {
  margin: 10rpx 0;
  font-size: 28rpx;
}

.content {
  font-size: 28rpx;
}

.op {
  position: fixed;
  right: 3%;
  bottom: 48rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 22rpx;
  z-index: 2;
}

.header {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  border: 2rpx solid #fff;
  background: #fff;
}

.op>view {
  margin-top: 50rpx;
  text-align: center;
}

.op>view>image {
  width: 60rpx;
  height: 60rpx;
}

.op>view:last-child>image{
  width: 54rpx;
  height: 54rpx;
}

.chat {
  position: fixed;
  z-index: 1;
  left: 0;
  bottom: 0;
  width: 100%;
  padding-top: 10rpx;
  box-sizing: border-box;
  height: 10vh;
  background: #000;
}

.chat>view {
  width: 80%;
  margin-top: 2vh;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 4vh;
}

.chat image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.chat input {
  flex: 1;
  font-size: 24rpx;
  color: #fff;
}