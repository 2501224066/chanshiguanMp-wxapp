.box {
  padding: 0 32rpx 2vh 32rpx;
}

.box>.img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 90rpx auto;
}

.box>.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 40rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ececec;
}

.box>.item:last-child {
  border: none;
}

.box>.item>.tag {
  color: #828088;
}

.box>.item>.ipt {
  flex: 1;
  text-align: right;
}

.box>.item>.img {
  width: 10rpx;
  height: 17rpx;
  line-height: 0;
  margin-left: 20rpx;
}

.box>.item .placeholder {
  color: #A0A0A0;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 99999;
  padding: 20rpx;
  box-sizing: border-box;
}

.footer>.content {
  width: 633rpx;
  margin: auto;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  color: #9147FF;
  border-radius: 40rpx;
  border: 1rpx solid #ececec;
}
