page {
  background: #f8f8f8;
}

.diary-manage{
  padding-bottom: 10vh;
}

.list>.item {
  margin-top: 20rpx;
  background: #fff;
  padding: 21rpx 24rpx;
}

.list>.item>.top {
  display: flex;
  align-items: center;
}

.list>.item>.top>.img {
  width: 200rpx;
  height: 150rpx;
  margin-right: 31rpx;
}

.list>.item>.top>.content {
  height: 150rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list>.item>.top>.content>.naem {
  font-size: 28rpx;
}

.list>.item>.top>.content>.time {
  font-size: 24rpx;
  color: #828088;
  margin-bottom: 10rpx;
}

.list>.item>.top>.content>.op {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list>.item>.top>.content>.op>.btn {
  font-size: 27rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ececec;
  color: #828088;
}

.list>.item>.top>.content>.op>.btn1 {
  font-size: 27rpx;
  color: #fff;
  background: #9139ff;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
}

.list>.item>.footer {
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #828088;
  font-size: 27rpx;
  margin-top: 36rpx;
}
