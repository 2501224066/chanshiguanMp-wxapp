.top {
  padding: 20rpx 4%;
  background: #fff;
}

.some {
  display: flex;
  justify-content: left;
  align-items: center;
}

.top image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 3%;
}

.nickname {
  font-size: 38rpx;
  margin-bottom: 10rpx;
}

.autograph {
  font-size: 24rpx;
  color: #666;
}

.count {
  display: flex;
  justify-content: center;
  margin: 50rpx 0 20rpx 0;
}

.count>view {
  width: 25%;
  text-align: center;
}

.count-list>view:nth-child(1) {
  font-size: 38rpx;
}

.count-list>view:nth-child(2) {
  color: #999;
  font-size: 20rpx;
}

.ul {
  margin-top: 10rpx;
  background: #fff;
}

.li {
  padding: 0 5%;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.li view {
  margin: 26rpx 0;
  flex: 1;
}

.li:nth-child(2) {
  border-top: 3rpx solid #f5f5f5;
}

.right {
  width: 30rpx;
  height: 30rpx;
}

.red {
  width: 16rpx;
  height: 16rpx;
  background: #f66262;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.login {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 600;
}

.login image{
  width: 30rpx;
  height: 30rpx;
}